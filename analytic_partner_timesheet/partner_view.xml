<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_hr_timesheet_line_tree">
            <field name="name">hr.analytic.timesheet.partner.tree</field>
            <field name="model">hr.analytic.timesheet</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">        
                <field name="account_id" position="before">
                    <field name="partner_id" domain="[('is_company', '=', True)]" on_change="onchange_partner_id(partner_id, account_id)" options="{'no_create': True}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hr_timesheet_line_tree2">
            <field name="name">hr.analytic.timesheet.partner.tree</field>
            <field name="model">hr.analytic.timesheet</field>
            <field name="inherit_id" ref="hr_timesheet_invoice.hr_timesheet_line_tree2"/>
            <field name="arch" type="xml">        
                <field name="account_id" position="attributes">
                    <attribute name="domain">[('type','=','normal'),('use_timesheets','=',1),'|',('partner_id','=',False),('partner_id','=',partner_id)]</attribute>
                </field>
            </field>
        </record>

        <!--'default_partner_id': partner_id-->
