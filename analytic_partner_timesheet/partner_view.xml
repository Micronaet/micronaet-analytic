            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_search"/>
            <field name="arch" type="xml">        
                <field name="account_id" position="before">
                    <field name="partner_id" />
                </field>                
            </field>
        </record>-->
    </data>
</openerp>

